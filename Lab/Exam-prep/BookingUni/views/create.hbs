<div id="container">
    <div>
        <div class="notification errorBox">
            {{#each error}}
            <span>{{this}}</span>
            {{/each}}
        </div>
    </div>

    <section id="viewAddhotel">
        <h2>Add new hotel</h2>
        <form id="formAddhotel" action="/create" method="post">
            <label for="hotel">Hotel name:</label>
            <input type="text" id="hotel" name="hotel" placeholder="Hotel name" value="{{body.name}}">
            <label for="city">City:</label>
            <input type="text" id="city" name="city" placeholder="City" value="{{body.city}}">
            <label for="free-rooms">Free rooms:</label>
            <input type="number" id="free-rooms" name="free-rooms" placeholder="Free rooms" value="{{body.freeRooms}}">
            <label for="imgUrl">Image:</label>
            <input type="text" id="imgUrl" name="imgUrl" placeholder="https://" value="{{body.imageUrl}}">

            <input type="submit" class="create" value="Add">
        </form>
    </section>