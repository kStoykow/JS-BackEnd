<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{coin.image}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{coin.name}}</h1>
            <h3 id="payment">Payment method: {{coin.paymentMethod}}</h3>
            <p id="price"><span>Price: ${{coin.price}}</span></p>
            <p id="description">{{coin.details}}</p>
        </div>
        {{#if user}}
        <div class="product-btn">
            <!--Only for registered user and author of the publication -->
            {{#if isOwner}}
            <div class="author">
                <a href="/crypto/{{coin._id}}/edit" class="btn-edit">Edit</a>
                <a href="/crypto/{{coin._id}}/delete" class="btn-delete">Delete</a>
            </div>
            {{else}}
                {{#if canBuy}}
                <!-- Logged in user who has not yet buy this crypto-->
                <a href="/crypto/{{coin._id}}/buy" class="btn-buy">Buy</a>
                {{else}}
                <!-- Logged in user who has already buy this crypto-->
                <p class="buy-message">You already bought these crypto coins.</p>
                {{/if}}
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>