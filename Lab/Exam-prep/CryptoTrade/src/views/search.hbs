<section class="crypto-search">
    <h1>Search</h1>

    <form class="search-form" method="GET">
        <input type="text" class="search-coin" name="search" placeholder="Search here..." value="{{search}}">
        <select id="payment" name="payment">
            {{#each options}}
            <option value="{{value}}" {{#if selected}}selected{{/if}}>{{text}}</option>
            {{/each}}
        </select>
        <button type="submit" class="btn-search">Search</button>
    </form>

    <div class="search-result">
        <div class="search-list">
            {{#each coins}}
            <div class="coin">
                <div class="coin-img">
                    <img src="{{image}}">
                </div>
                <div class="coin-info">
                    <h1>{{name}}</h1>
                    <p><span>Price: </span>${{price}}</p>
                    <p><span>Payment: </span>{{paymentMethod}}</p>
                </div>

                <a href="#" class="btn-details">Details</a>
            </div>
            {{/each}}
        </div>

    </div>

    <!-- <div class="no-match">
                <p>No match was found!</p>
            </div> -->
</section>