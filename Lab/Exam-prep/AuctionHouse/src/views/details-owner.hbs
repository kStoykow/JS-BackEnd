<main>
    {{#if error}}
    <div class="error-box">
        <p>{{error}}</p>
    </div>
    {{/if}}

    <section id="catalog-section">

        <h1 class="item">
            {{auction.title}}
            <div class="f-right">
                <a class="action pad-small f-left" href="/auctions/{{auction._id}}/edit">Edit</a>
                <a class="action pad-small f-left" href="/auctions/{{auction._id}}/delete">Delete</a>
            </div>
        </h1>
        <div class="item padded">

            <div class="layout right large">

                <div class="col">
                    <img src="{{auction.imageUrl}}" class="img-large">
                </div>

                <div class="content pad-med">

                    <p>In category: <strong>{{category.label}} </strong></p>
                    <p>{{auction.description}} </p>

                    <div class="align-center">
                        <div>
                            Current price: $<strong>{{auction.price}} </strong>
                        </div>

                        <div>
                            {{#if highestBid}}
                            <!-- If there is a bidder -->
                            Bid by <strong>{{highestBid.firstName}} {{highestBid.lastName}}</strong>

                            <a class="action pad-med cta" href="/auctions/{{auction._id}}/close">Close Auction</a>


                            {{else}}
                            <!-- If there are no bids -->
                            No bids
                            {{/if}}
                        </div>
                    </div>

                </div>
            </div>

            <footer>Listed by {{owner.firstName}} {{owner.lastName}}</footer>
        </div>

    </section>

</main>