<header>
    <ul>
        <li><img class="logo" src="/static/images/logo.png"></li>
        <li><a href="/">Browse</a></li>
        <li><a href="/about">About</a></li>
        {{#if user}}
        <li><a href="/create/cube">Add a Cube</a></li>
        <li><a href="/create/accessory">Add Accessory</a></li>
        <li><a href="/logout">Logout</a></li>
        {{else}}
        <li><a href="/login">Login</a></li>
        <li><a href="/register">Register</a></li>
        {{/if}}
    </ul>
</header>
{{#with cube}}
<h1>{{title}}</h1>
<div class="form">
    <h2>{{name}}</h2>
    <img class="cube" src="{{imageUrl}}">
    {{/with}}

    {{#if accessories}}
    <form action="" method="post">
        <label for="accessory">Accessories</label>
        <select id="accessory" name="accessory" />
        {{#each accessories}}
        {{>accessoryOptions}}
        {{/each}}
        </select>
        <input type="submit" value="Attach">
    </form>
    {{else}}
    <h3 class="italic">This cube has all available accessories so far or there is no available at all...
    </h3>
    <a class="btn" href="/">Back</a>
    {{/if}}
</div>