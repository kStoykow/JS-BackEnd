<header>
  <ul>
    <li><img class="logo" src="/static/images/logo.png"></li>
    <li><a href="/">Browse</a></li>
    <li><a href="/about">About</a></li>
    {{#if user}}
    <li><a href="/create/cube">Add a Cube</a></li>
    <li><a href="/create/accessory">Add Accessory</a></li>
    <li><a href="/logout">Logout</a></li>
    {{else}}
    <li><a href="/login">Login</a></li>
    <li><a href="/register">Register</a></li>
    {{/if}}
  </ul>
</header>

<h1>{{cube.name}}</h1>
<img class="cube" src="{{cube.imageUrl}}">
<div class="details">
  <p><span>Description:</span> {{cube.description}}</p>
  <p><span>Difficulty level:</span> {{cube.difficulty}}</p>
  <a class="btn" href="/">Back</a>
  <a class="btn" href="/attach/accessory/{{cube._id}}">Add Accessory</a>
  {{#if isOwner}}
  <a class="btn" href="/edit/{{cube._id}}">Edit Cube</a>
  <a class="btn" href="/delete/{{cube._id}}">Delete Cube</a>
  {{/if}}
</div>

<h2>Accessories</h2>
<div class="accessories">
  {{#if accessories}}
  {{#each accessories}}
  <div class="accessory">
    <img src="{{imageUrl}}" alt="stickerName">
    <h3>{{name}}</h3>
    <p>{{description}}</p>
  </div>
  {{/each}}
  {{else}}
  <h3 class="italic">This cube has no accessories yet...</h3>
  {{/if}}
</div>